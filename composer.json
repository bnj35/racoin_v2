{
    "require": {
        "php": ">=8.2",
        "slim/slim": "^4.0",
        "twig/twig": "3.*",
        "illuminate/database": "11.*",
        "ext-mysqli": "*",
        "ext-pdo": "*",
        "monolog/monolog": "^3.8",
        "zircote/swagger-php": "^5.0",
        "slim/psr7": "^1.7"
    },
    "autoload": {
        "psr-4": {
            "Controller\\": "src/Controller/",
            "Model\\": "src/Model/",
            "Database\\": "src/Database/"
        }
    },
    "config": {
        "allow-plugins": {
            "kylekatarnls/update-helper": true
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "phpstan/phpstan": "^2.1"
    },
    "scripts": {
        "swagger": "swagger --output public/swagger.json --exclude vendor/"
    }
}
